<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:padding="20dp">

    <ImageView
        android:id="@+id/beaconImage"
        android:layout_width="104dp"
        android:layout_height="599dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/beacon" />

    <LinearLayout
        android:layout_width="185dp"
        android:layout_height="429dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/beaconImage"
        app:layout_constraintStart_toEndOf="@+id/beaconImage"
        app:layout_constraintTop_toTopOf="@+id/beaconImage">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to EE 471!"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MWF 12:00 P.M. - 12:50 P.M."
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="1sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="1sp"
            tools:text="MWF 12:00 P.M. - 12:50 P.M." />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOR FULL ATTENDANCE CREDIT, REMAIN IN CLASSROOM DURING SCHEDULED CLASS TIME."
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NOTE: Before exiting classroom: enter info, press 'EXIT', then press 'SEND TODAY'S ATTENDANCE INFO'."
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="10sp"
            tools:hint="Name"
            tools:textColorHint="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="A Number"
            android:inputType="textPersonName"
            android:textColorHint="@color/colorPrimaryDark"
            android:textSize="10sp"
            tools:hint="A Number"
            tools:textColorHint="@color/colorPrimaryDark" />

        <Button
            android:id="@+id/button"
            android:layout_width="149dp"
            android:layout_height="36dp"
            android:text="Exit"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button2"
            android:layout_width="167dp"
            android:layout_height="wrap_content"
            android:text="Send Today's Attendance Info" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>